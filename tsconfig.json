{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"lib": ["ES2020", "DOM"],
		"outDir": "dist",
		"sourceMap": true,
		"declaration": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", ".storybook", "src/**/*.stories.tsx"]
}
